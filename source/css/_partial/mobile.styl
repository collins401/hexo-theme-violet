@media mq-mobile
	#footer
		padding 20px 0
	.container
		width 100%
	.archive-article, .article
		border-radius 0
		margin 30px 0
	.archive-article-title.left-header, .article-title
		font-size 20px
	.owl-catom
		display none
	.archive-year-wrap
		position relative
	.archive-lists
		margin-left 0
	.logo
		width 80px
	.archive-year-wrap
	    position relative
	    border-bottom 1px solid #eee
	    &:after
	        content: 'year'
	.archive-lists
		margin-left 0
		font-size 12px
	#main-nav
		float right
	#main-nav input[type=checkbox]:checked ~ ul.menu
		display: block
	#main-nav label
		display block
	ul.menu
		display none
		position absolute
		width 100px
		right 10px
		border-radius 2px
		background-color rgba(255,255,255,.9);
		padding-top 5px
		li
			float none
			width 100%
			line-height 32px
			padding: 0 0
			text-align center
			a
				display block
				font-size 12px
				color #333