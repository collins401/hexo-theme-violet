<% if (post.link){ %>
  <h1 itemprop="name" class="<%= class_name %>  <% if (index) {%>left-header<% } %>" >
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name" class="<%= class_name %>  <% if (index) {%>left-header<% } %>" >
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>  <% if (index) {%>left-header<% } %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>